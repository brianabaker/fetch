
<div class="page-header">
  <h1>Sign up :) </h1>
</div>


<% if flash[:error] %>
 <ul>
   <% flash[:error].each do |error| %>
   <li><%= error %></li>
   <% end %>
 </ul>
<% end %>

<%= form_for @user do |f| %>
  <br/>

  <p><%= f.label :name, "User Name: " %>

     <%= f.text_field :name  %></p><br/>

  <br/>
  <p><%= f.submit %></p>

  <%end %>

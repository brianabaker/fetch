
<div class="page-header">
  <h1>Sign up</h1>
</div>

<%= render "error" %>

<%= form_for @user do |f| %>
  <p><%= f.label "Username" %>
  <%= f.text_field :user_name %></p>
  <p><%= f.label "Password" %>
  <%= f.password_field :password %></p>
  <p><%= f.label "Password Confirmation" %>
  <%= f.password_field :password_confirmation %></p>
  <%= f.submit "Submit" %>
<% end %>

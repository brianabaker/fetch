<% if flash[:error] %>
 <ul>
   <% flash[:error].each do |error| %>
   <li><%= error %></li>
   <% end %>
 </ul>
<% end %>

<h1>Sign up</h1>

<%= form_for @user do |f| %>
  Username: <%= f.text_field :user_name %><br/>
  Password: <%= f.password_field :password %><br/>
  Password Confirmation: <%= f.password_field :password_confirmation %><br/>
  <%= f.submit "Submit" %>
<% end %>

<div class="page-header">
  <h1>Update your CuddleBuddies NAME:</h1>
</div>

<% if flash[:error] %>
 <ul>
   <% flash[:error].each do |error| %>
   <li><%= error %></li>
   <% end %>
 </ul>
<% end %>

<%= form_for @user do |f| %>

  <%= f.label :user_name, "New User Name: " %>
  <%= f.text_field :user_name %>

  <br/>
  <br/>

  <%= f.submit %>
<%end %>
<br/>
  <%= button_to "Delete", @user, method: :delete %>

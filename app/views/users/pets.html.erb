
<div class="page-header">
<h1>Your Pets</h1>
</div>
<div class="page-header">

<p><%= link_to "Your Pets Appointments", user_pets_appointments_path %></p>
</div>
<% if flash[:notice] %>
<div class="alert alert-info">
<%= flash[:notice] %>
</div>
<% end %>

<div class="container text-center">
  <div class="row">

    <% @user_pets.each do |pet| %>
    <div class="col-sm-4 ">
    <img src='<%= pet.pet_photo %>' class="thumbnail img-responsive danger" style="max-height: 500px; max-width: 300px"/>
    <p><%= link_to pet.name, pet_path(id: pet.id) %></p>

    </div>
    <% end %>
  </div>
</div>

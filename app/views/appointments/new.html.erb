
<h4>Create Appointment</h4>
<br/>
<% if flash[:error] %>
 <ul>
   <% flash[:error].each do |error| %>
   <li><%= error %></li>
   <% end %>
 </ul>
<% end %>

<p>When would you like to meet your cuddlebuddy?</p>
<br/>

<%= form_for @appointment do |f| %>
  <%= f.hidden_field :sitter_id, :value => @user.id %>
  <%= f.hidden_field :cuddle_buddy_id, :value => @pet.id %>
  <%= f.label "start" %>
  <%= f.datetime_select :checkin, {discard_year: true} %>
  <br/><br/>
  <%= f.label "end" %>
  <%= f.datetime_select :checkout, {discard_year: true} %>
  <br/>
  <%= f.submit "Make Appointment" %>
<% end %>

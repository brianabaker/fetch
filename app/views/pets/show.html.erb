

<br/>
<h4>All about <%= @pet.name %></h4>
<p><img src="<%= @pet.pet_photo %>" style="max-height: 900px; max-width: 500px" /></p>
<p>Name: <%= @pet.name %></p>
<p>A Very Cuddly: <%= @pet.species.name %></p>
<p>Owner: <%= @pet.owner.user_name %></p>
<p>About Me: <%= @pet.bio %></p>
<br/>


<% if @user.id == @pet.owner_id%>
<%= button_to "Edit Pet", user_edit_pet_path(id: @pet.id, user_id: @user.id), method: :get %>
<% else %>
<%= link_to "Cuddle with this Buddy", new_appointment_path(user_id: @user.id, pet_id: @pet.id), method: :post %>
<% end %>
